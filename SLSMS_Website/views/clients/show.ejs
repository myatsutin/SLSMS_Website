<body>
    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image/image/sidebar-5.jpg>
		      <div class="sidebar-wrapper">


                    <div class="logo">
                      <a href="http://www.safe-lanes.com" target="_blank" class="simple-text">
                        <img src="/images/SafeLanes_logo.png" class ="imgclass"/>
                        </a>
                    </div>
                    <ul class="nav">
                        <li>
                            <a href="/dashboard">
                               <p>Dashboard</p>
                            </a>
                        </li>

					    <li>
                           <a href="/user">
                              <p>User Profile</p>
                           </a>
                        </li>

						<li>
                            <a href="/employees">
                               <p>Employee Master</p>
                            </a>
                        </li>

                        <li>
                            <a href="/vdranalysis">
                                <p>VDR Analysis</p>
                            </a>
                        </li>
                        <li>
                            <a href="/jobassignments">
                               <p>Vessel Job Tracker</p>
                            </a>
                        </li>
						 <li class ="active">
                            <a href="/clients">
                               <p>Client Details</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

		<div class="main-panel">
           <nav class="navbar navbar-default navbar-fixed">
              <div class="container-fluid">
                <div  align="right">
                   <a href="">Account</a>
                      &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                   <a href="#">Log out</a>
                </div>
              </div>
	       </nav>
          <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="header">
                               <h5><a href="/clients">Client List</a></h5>
                            </div>
                        <div class="content">
							<div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Name Of Company *</label>
                                            <input type="text" class="form-control" disabled value="<%= client.company%>">
									</div>
                                </div>

								<div class="col-md-4">
                                    <div class="form-group">
                                        <label>Address</label>
                                            <input type="text" class="form-control" disabled value="<%= client.address %>">
									</div>
                                </div>
							</div>

							<div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Country</label>
                                            <input type="text" class="form-control" disabled value="<%= client.country%>">
									</div>
                                </div>

								<div class="col-md-4">
                                    <div class="form-group">
                                        <label>City</label>
                                            <input type="text" class="form-control" disabled value="<%= client.city%>">
									</div>
                                </div>
                             </div>

							<div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Office Number</label>
                                            <input type="text" class="form-control"  disabled value="<%=client.officeno%>">
                                    </div>
                                </div>

                                <div class="col-md-4">
									<div class="form-group">
                                        <label>Website *</label>
                                            <input type="text" class="form-control" disabled value="<%=client.website%>">
                                    </div>
                                </div>
                            </div>
							<div class="container">
								<div class="col-md-4" style="padding-left:0px; padding-right: 0px;">
									<img scr="/uploads"/<%=client.photo%>" class="img-responsive">
								</div>
							</div>


							<h3><a href="/clients/edit/<%= client._id%>" class="btn btn-info btn-fill pull-right">EDIT</a></h3>
                                <form action="/clients/delete/<%= client._id%>" method="post">
                                <button type="submit" class="btn btn-info btn-fill pull-right" onclick="return confirm('Are you sure want to inactive?')">INACTIVE</button>
								<div class="clearfix"></div>
						    </div>
						</form>
                    </div>
                </div>
            </div>
		</div>
    </body>
</html>
