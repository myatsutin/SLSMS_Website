           <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h5><a href="/employees">Employee List</a></h5>
                                   <h5>Create New Employee</h5>

							</div>
							<div class="content">
                              <form action="/employees/save" method="post">
                                <div class="row">
                                   <div class="col-md-4">
                                      <div class="form-group">
                                           <label>First Name</label>
                                                 <input type="text" class="form-control" placeholder="First Name" id="firstname"></div>
                                      </div>
                                   <div class="col-md-4">
                                      <div class="form-group">
                                           <label>Last Name</label>
                                                <input type="text" class="form-control" placeholder="Last Name" value="lastname">
                                      </div>
                                   </div>
                                </div>

								<div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label>Address</label>
                                                <input type="text" class="form-control" placeholder="Home Address" name="address">
                                            </div>
                                        </div>
                                </div>


                                <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>DOB *</label>
                                                <input type="date" class="form-control" placeholder="Date Of Birth" name="dateofbirth" required>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Passport No *</label>
                                                <input type="text" class="form-control" placeholder="Passport Number" name="passportno" required>
                                            </div>
                                        </div>
                                </div>



								<div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Country *</label>
                                                  <select id="inputState" class="form-control">
                                                      <option selected>Choose...</option>
                                                      <option>Singapore</option>
													  <option>Korea</option>
                                                 </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Nationality *</label>
                                                 <select id="inputState" class="form-control">
                                                      <option selected>Choose...</option>
                                                      <option>Singaporean</option>
													  <option>Korean</option>
                                                 </select>
                                            </div>
                                        </div>
                                </div>

			                     <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Marrital Status *</label>
												<input id="married" type="radio" name="maritalStatus" value="married" checked="checked" onclick="show();"/>Married &nbsp;&nbsp;
								                <input id="unmarried" type="radio" name="maritalStatus" value="unmarried" onclick="hide();" />Unmarried
                                            </div>
                                        </div>
								 </div>
								 <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label>Comments</label>
                                                <textarea rows="5" class="form-control" placeholder="Here can be your description" name="comment"></textarea>
                                            </div>
                                        </div>
                                 </div>
	                            <div class="row">
								    <div class="col-md-4">
						               <div class="form-group">
                                           <label for="filecontrol">Upload Photo of Employee</label>
                                           <input type="file" class="form-control-file" id="filecontrol">
                                       </div>
									</div>
						        </div>
			                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Father Name </label>
                                                <input type="text" class="form-control" placeholder="Father Name" name="fathername">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Mother Name </label>
                                                <input type="text" class="form-control" placeholder="Mother Name" name="mothername">
                                            </div>
                                        </div>
                                </div>
			                     <div class="row" id="divs">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Wife Name </label>
                                                <input type="date" class="form-control" placeholder="Wife Name" name="wifename">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>No Of Kids </label>
                                                <input type="text" class="form-control" placeholder="Number of kids" name="noofkids">
                                            </div>
                                        </div>
                                </div>



								<div class="row">
                                       <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Bank Name *</label>
                                                 <select id="bankname" class="form-control">
                                                      <option selected>Choose...</option>
                                                      <option>DBS</option>
													  <option>MayBank</option>
                                                 </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Account No *</label>
                                                <input type="text" class="form-control" placeholder="Account Number" name="accountno">
                                            </div>
                                        </div>
                                </div>
							<button type="submit" class="btn btn-info btn-fill pull-right">Save</button>
							<div class="clearfix"></div>

                            </form>
